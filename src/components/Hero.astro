---           
// --- EDIT DI SINI ---
const NAMA_SAYA = "Gibran El Fahmi";
const BIO_SINGKAT = "Seorang mahasiswa S1 Teknik Komputer yang mendalami di bidang data science dan Machine Learning, Suka berkreasi dan mempelajari hal baru.";
const FOTO_PROFIL = "/FOTO HIMA el.JPG";
const LINK_CV = "/CV - Gibran El Fahmi.pdf";
---

<section>
  <img src={FOTO_PROFIL} alt={`Foto profil ${NAMA_SAYA}`} />
  <h1>{NAMA_SAYA}</h1>
  <p>{BIO_SINGKAT}</p>
  <a href={LINK_CV} target="_blank" rel="noopener noreferrer" class="button">
    Unduh CV
  </a>
</section>

<style>
  section {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: 4rem 2rem;
  }

  img {
    width: 150px;
    height: 150px;
    border-radius: 50%;
    object-fit: cover;
    margin-bottom: 1rem;
    border: 3px solid #6366f1;
  }

  h1 {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
  }

  p {
    font-size: 1.125rem;
    color: #a1a1aa;
    max-width: 600px;
    margin-bottom: 2rem;
  }

  .button {
    display: inline-block;
    background-color: #6366f1;
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
    text-decoration: none;
    font-weight: 600;
    transition: background-color 0.2s;
  }

  .button:hover {
    background-color: #4f46e5;
  }
</style>