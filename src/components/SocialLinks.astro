---
// Anda bisa menambahkan link sosial media Anda di sini
const socialLinks = [
  { name: "Instagram", url: "https://www.instagram.com/gibranelfahmi/", icon: "fa-brands fa-instagram" },
  { name: "TikTok", url: "https://www.tiktok.com/@gibranelfahmi", icon: "fa-brands fa-tiktok" },
  { name: "Email", url: "mailto:gibranelfahmi@gmail.com", icon: "fa-solid fa-envelope" },
  { name: "LinkedIn", url: "https://www.linkedin.com/in/gibran-el-fahmi-48594324a/", icon: "fa-brands fa-linkedin" },
  { name: "Kaggle", url: "https://www.kaggle.com/gibranelfahmi", icon: "fa-brands fa-kaggle" },
];
---

<div class="social-links">
  {socialLinks.map(link => (
    <a href={link.url} target="_blank" rel="noopener noreferrer">
      <i class={link.icon}></i>
    </a>
  ))}
</div>

<style>
  .social-links {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 2rem 0;
  }
  .social-links a {
    color: var(--primary-color);
    font-size: 1.5rem;
    margin: 0 1rem;
    transition: color 0.3s ease;
  }
  .social-links a:hover {
    color: var(--text-color);
  }
</style>

