---
// Anda bisa menambahkan link sosial media Anda di sini
const socialLinks = [
  { name: "Instagram", url: "https://www.instagram.com/gibranelfahmi/", icon: "fa-brands fa-instagram" },
  { name: "TikTok", url: "https://www.tiktok.com/@gibranelfahmi", icon: "fa-brands fa-tiktok" },
  { name: "Email", url: "mailto:gibranfahmii345@gmail.com", icon: "fa-solid fa-envelope" },
  { name: "LinkedIn", url: "https://www.linkedin.com/in/gibran-el-fahmi-b56a97321?lipi=urn%3Ali%3Apage%3Ad_flagship3_profile_view_base_contact_details%3BPmUXoG9KQEyKwdc1sO40qA%3D%3D", icon: "fa-brands fa-linkedin" },
  { name: "Kaggle", url: "https://www.kaggle.com/elffff", icon: "fa-brands fa-kaggle" },
];
---

<div class="social-links">
  {socialLinks.map(link => {
    if (link.name === "Email") {
      return (
        <a href={link.url} data-astro-reload>
          <i class={link.icon}></i>
        </a>
      );
    }
    return (
      <a href={link.url} target="_blank" rel="noopener noreferrer">
        <i class={link.icon}></i>
      </a>
    );
  })}
</div>

<style>
  .social-links {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 2rem 0;
  }
  .social-links a {
    color: var(--primary-color);
    font-size: 1.5rem;
    margin: 0 1rem;
    transition: color 0.3s ease;
  }
  .social-links a:hover {
    color: var(--text-color);
  }
</style>

