---
import Layout from '../layouts/Layout.astro';
---

<Layout title="My CV">
  <main class="cv-container">
    <iframe src="/CV - Gibran El Fahmi.pdf" class="cv-embed"></iframe>
  </main>
</Layout>

<style>
  .cv-container {
    width: 100%;
    height: calc(100vh - 80px); /* Sesuaikan tinggi dengan tinggi navbar */
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 1rem;
  }
  .cv-embed {
    width: 100%;
    height: 100%;
    border: 1px solid #ccc;
    border-radius: 8px;
  }
</style>